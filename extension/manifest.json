{
    "manifest_version": 3,
    "name": "Study Slap",
    "description": "annihilates your eardrums if you get off task",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Chrome Addon v3 Starter",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["*://www.instagram.com/*",
        "*://discord.com/*",
        "*://www.youtube.com/watch?v=CtpdMkKvB6U/*",
        "*://www.youtube.com/watch?v=Na34j-ZKBu0/*",
        "*://www.coolmathgames.com/*",
        "*://www.tiktok.com/*",
        "*://www.twitter.com/*"],
        "js": ["content.js"]
    }]
}
